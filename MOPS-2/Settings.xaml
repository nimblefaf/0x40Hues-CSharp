<Window x:Name="SettingsWindow" x:Class="MOPS_2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOPS_2"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="400" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" MouseDown="SettingsWindow_MouseDown" AllowsTransparency="True" WindowStyle="None" Opacity="0.8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="285" VerticalAlignment="Top" Width="400" Margin="0,15,0,0">
            <TabItem Header="RESOURCES" Margin="0,0,-22,-3" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Cursor="Arrow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="347*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="234*"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="197" VerticalAlignment="Top" Width="197" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                    <ProgressBar HorizontalAlignment="Left" Height="10" Margin="0,214,0,0" VerticalAlignment="Top" Width="187" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Button x:Name="load_rp_button" Content="LOAD ZIPS" HorizontalAlignment="Left" Margin="0,183,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                <GradientStop Color="#FFCDCDCD" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Label x:Name="rp_name_label" Content="Respack name here" HorizontalAlignment="Left" Margin="159,0,0,0" VerticalAlignment="Top" Width="188" Grid.RowSpan="2" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="EDITOR" Margin="22,0,-68,-3" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Cursor="Arrow"/>
            </TabItem>
            <TabItem Header="OPTIONS" Margin="68,0,-104,-3" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Cursor="Arrow"/>
            </TabItem>
            <TabItem Header="INFO" Margin="104,0,-154,-3" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Cursor="Arrow"/>
            </TabItem>
        </TabControl>
        <Button x:Name="hide_button" Content="X" HorizontalAlignment="Left" Margin="385,0,0,0" VerticalAlignment="Top" Width="15" Height="15" FontWeight="Bold" FontSize="6" FontFamily="SimHei" Foreground="White" Background="Black" BorderBrush="Black" Click="hide_button_Click" Cursor="Hand"/>

    </Grid>
</Window>
